		</license>
  </organization>

  <defaults>
    <groupId>com.adobe.flex.framework</groupId>
    <version>2.0.1.180927</version>
  </defaults>

  <artifacts>

    <!-- artifacts shared between air and flex frameworks -->
<!-- 
automation.swc
flex.swc
framework.swc
playerglobal.swc
rpc.swc
utilities.swc
 -->
    <artifact>
      <artifactId>flex-framework</artifactId>
      <type>pom</type>
      <dependencies>
        <dependency>
          <artifactId>automation</artifactId>
          <type>swc</type>
        </dependency>
        <dependency>
          <artifactId>flex</artifactId>
          <type>swc</type>
        </dependency>
        <dependency>
          <artifactId>framework</artifactId>
          <type>swc</type>
        </dependency>
        <dependency>
          <artifactId>playerglobal</artifactId>
          <type>swc</type>
        </dependency>
        <dependency>
          <artifactId>rpc</artifactId>
          <type>swc</type>
        </dependency>
        <dependency>
          <artifactId>utilities</artifactId>
          <type>swc</type>
        </dependency>

        <dependency>
          <artifactId>automation</artifactId>
          <type>rb.swc</type>
        </dependency>
        <dependency>
          <artifactId>framework</artifactId>
          <type>rb.swc</type>
        </dependency>
        <dependency>
          <artifactId>rpc</artifactId>
          <type>rb.swc</type>
        </dependency>
      </dependencies>
    </artifact>

    <artifact>
      <artifactId>automation</artifactId>
      <type>swc</type>
      <location>frameworks/libs/automation.swc</location>
    </artifact>

    <artifact>
      <artifactId>flex</artifactId>
      <type>swc</type>
      <location>frameworks/libs/flex.swc</location>
    </artifact>

    <artifact>
      <artifactId>framework</artifactId>
      <type>swc</type>
      <location>frameworks/libs/framework.swc</location>
    </artifact>
    <artifact>
      <artifactId>framework</artifactId>
      <type>zip</type>
      <classifier>configs</classifier>
      <location>frameworks</location>
      <includes>
        <include>*.xml</include>
        <include>*.ser</include>
      </includes>
    </artifact>

    <artifact>
      <artifactId>playerglobal</artifactId>
      <type>swc</type>
      <location>frameworks/libs/playerglobal.swc</location>
    </artifact>

    <artifact>
      <artifactId>rpc</artifactId>
      <type>swc</type>
      <location>frameworks/libs/rpc.swc</location>
    </artifact>

    <artifact>
      <artifactId>utilities</artifactId>
      <type>swc</type>
      <location>frameworks/libs/utilities.swc</location>
    </artifact>
    
    <!-- locales -->
<!-- 
en_US
-->
    <artifact>
      <artifactId>automation</artifactId>
      <type>rb.swc</type>
      <location>frameworks/locale/en_US/automation_rb.swc</location>
    </artifact>
    <artifact>
      <artifactId>framework</artifactId>
      <type>rb.swc</type>
      <location>frameworks/locale/en_US/framework_rb.swc</location>
    </artifact>
    <artifact>
      <artifactId>rpc</artifactId>
      <type>rb.swc</type>
      <location>frameworks/locale/en_US/rpc_rb.swc</location>
    </artifact>
<!-- 
automation_rb.swc
framework_rb.swc
rpc_rb.swc
 -->
    <!-- en US locales -->
    <artifact>
      <artifactId>automation</artifactId>
      <type>rb.swc</type>
      <classifier>en_US</classifier>
      <location>frameworks/locale/en_US/automation_rb.swc</location>
    </artifact>
    <artifact>
      <artifactId>framework</artifactId>
      <type>rb.swc</type>
      <classifier>en_US</classifier>
      <location>frameworks/locale/en_US/framework_rb.swc</location>
    </artifact>
    <artifact>
      <artifactId>rpc</artifactId>
      <type>rb.swc</type>
      <classifier>en_US</classifier>
      <location>frameworks/locale/en_US/rpc_rb.swc</location>
    </artifact>
  </artifacts>
</mapping>
