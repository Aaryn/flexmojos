import java.io.File;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.dom4j.Document;
import org.dom4j.DocumentException;
import org.dom4j.Node;
import org.dom4j.io.SAXReader;

try
{
    final String[] APPLICATIONS = { "main.mxml", "additional1.mxml", "additional2.mxml", "additional3.mxml" };
    
    SAXReader reader = new SAXReader();
    Document document = reader.read( new File( basedir, ".actionScriptProperties" ) );
    
    List nodes = document.selectNodes( "/actionScriptProperties/applications/application" );
    
    if ( nodes.size() != APPLICATIONS.length )
    {
        System.err.println( "Expected " + APPLICATIONS.length + " applications, but found " + nodes.size() );
        return false;
    }
    
    List found = new ArrayList( 10 );
    for ( Node node : nodes )
    {
        found.add( node.valueOf( "@path" ) );
    }
    
    List expected = new ArrayList( Arrays.asList( APPLICATIONS ) );
    if ( !found.containsAll( expected ) )
    {
        List missing = new ArrayList( expected );
        missing.removeAll( found );
        
        List extras = new ArrayList( found );
        extras.removeAll( expected );
        
        System.err.println( "Found " + found + " applications." );
        System.err.println( "Not found " + missing + "." );
        System.err.println( "Extra " + extras + "." );
        
        return false;
    }
}
catch( Throwable t )
{
    t.printStackTrace();
    return false;
}

return true;
