import java.io.File;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.dom4j.Document;
import org.dom4j.DocumentException;
import org.dom4j.Node;
import org.dom4j.io.SAXReader;

try
{
    SAXReader reader = new SAXReader();
    Document document = reader.read( new File( basedir, ".actionScriptProperties" ) );
    
    List nodes = document.selectNodes( "/actionScriptProperties/compiler/libraryPath/libraryPathEntry[@kind=3]" );
    
    if ( nodes.size() != 13 )
    {
        System.err.println( "Expected 13 ${M2_HOME} macros, but found " + nodes.size() );
        return false;
    }
    
    for ( Node node : nodes )
    {
        String path = node.valueOf( "@path" );
        if ( !path.startsWith( "${M2_HOME}" ) )
        {
            System.err.println( "${M2_HOME} prefix not found for: " + path );
            return false;
        }
    }
}
catch( Throwable t )
{
    t.printStackTrace();
    return false;
}

return true;
