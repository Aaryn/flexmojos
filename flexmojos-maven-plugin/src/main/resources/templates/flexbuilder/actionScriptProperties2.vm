<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<actionScriptProperties 
        mainApplicationPath="$mainApplication"
#if($version >= 6 && $projectUUID)
		projectUUID="$projectUUID"
#end
        version="$version"
        >

    <compiler
#if( $flexSDK != "default" )
			flexSDK="$flexSDK"
#end 
            additionalCompilerArguments="$!additionalCompilerArguments"
            copyDependentFiles="true" 
            enableModuleDebug="true" 
            generateAccessible="$accessible" 
            htmlExpressInstall="true" 
            htmlGenerate="$generateHtmlWrapper" 
            htmlHistoryManagement="true"
#if($version < 6)
            htmlPlayerVersion="$targetPlayer"
#elseif($useApolloConfig && $version >= 6)
			targetPlayerVersion="0.0.0"
#elseif(!$useApolloConfig && $version >=6)
			targetPlayerVersion="$targetPlayer"
#end
            htmlPlayerVersionCheck="true" 
            outputFolderPath="$flexBuilderOutputFolderPath" 
            sourceFolderPath="$mainSources" 
            strict="$strict" 
            useApolloConfig="$useApolloConfig" 
            verifyDigests="$verifyDigests" 
            warn="$showWarnings"
#if($version >= 6)
			autoRSLOrdering="true"
			includeNetmodSwc="true"
			useDebugRSLSwfs="true"
#end
            >

        <compilerSourcePath>
#foreach ($path in $sources)
            <compilerSourcePathEntry 
                    kind="1" 
                    linkType="1" 
                    path="$path"
                    />
#end 
        </compilerSourcePath>

        <libraryPath
                defaultLinkType="$libraryPathDefaultLinkType">

#foreach ($artifact in $dependencies)
			<!-- artifact: $artifact -->
            <libraryPathEntry
#if($artifact.getScope() == "rsl")
					autoExtract="true"
					rslUrl="$artifact.getFile().getName().replaceAll('swc', 'swf')"
#end 
                    kind="3" 
                    linkType="$artifact.getLinkType()" 
                    path="$artifact.getPath()"
#if($artifact.getSourcePath())
                    sourcepath="$artifact.getSourcePath()"
#end
                    useDefaultLinkType="false"
                    />

#end

		</libraryPath>


        <sourceAttachmentPath>
#foreach ($artifact in $dependencies)
#if ($artifact.getSourcePath())
            <sourceAttachmentPathEntry
                kind="3"
                linkType="$artifact.getLinkType()"
                path="$artifact.getPath()"
                sourcepath="$artifact.getSourcePath()"
                useDefaultLinkType="false" />
#end 
#end        
        </sourceAttachmentPath>

    </compiler>

    <applications>
#foreach ($application in $applications)
        <application 
                path="$application"
                />
#end
    </applications>

    <modules/>
    
    <buildCSSFiles>
#foreach( $cssfile in $cssfiles )
		<buildCSSFileEntry destPath="$flexBuilderOutputFolderPath" sourcePath="$cssfile" />
#end
    </buildCSSFiles>

</actionScriptProperties>
