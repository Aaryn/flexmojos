<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<actionScriptProperties 
        mainApplicationPath="$mainApplication" 
        version="3"
        >

    <compiler 
            additionalCompilerArguments="$!additionalCompilerArguments" 
            copyDependentFiles="true" 
            enableModuleDebug="true" 
            generateAccessible="$accessible" 
            htmlExpressInstall="true" 
            htmlGenerate="$generateHtmlWrapper" 
            htmlHistoryManagement="true" 
            htmlPlayerVersion="$targetPlayer" 
            htmlPlayerVersionCheck="true"
#if($flexBuilderVersion.equals("4") && !$flexBuilderOutputFolderPath.equals("bin-debug")) 
			outputFolderLocation="$flexBuilderOutputFolderPath"
			outputFolderPath="bin-debug"            
#else
			outputFolderPath="$flexBuilderOutputFolderPath"
#end 
            sourceFolderPath="$mainSources" 
            strict="$strict" 
            useApolloConfig="$useApolloConfig" 
            verifyDigests="$verifyDigests" 
            warn="$showWarnings"
            targetPlayerVersion="$targetPlayerVersion"
            >

        <compilerSourcePath>
#foreach ($path in $sources)
            <compilerSourcePathEntry 
                    kind="1" 
                    linkType="1" 
                    path="$path"
                    />
#end 
        </compilerSourcePath>

        <libraryPath
                defaultLinkType="$libraryPathDefaultLinkType">

#foreach ($dependency in $dependencies)

#set( $artifact = $artifactsMap.get($dependency.getArtifactId()) )

#if ($dependency.getGroupId().equals( "com.adobe.flex.framework" ))
			<!-- artifact: $dependency -->
            <libraryPathEntry 
                    kind="3" 
                    path="$dependency.getFile().getPath().replaceAll('\\', '/')"
#if ($dependency.getSourceAttachment())
                    sourcepath="$dependency.getSourceAttachment().getPath().replaceAll('\\', '/')"
#end
                    useDefaultLinkType="true"
                    />
#else
			<!-- artifact: $dependency -->
            <libraryPathEntry 
                    kind="3"
#if ($artifact.getScope().equals("rsl") && $pureActionscriptProject == false)
					linkType="3"
					autoExtract="$autoExtractRSLs"
					rslUrl="$rslUrlDirectory$dependency.getArtifactId().concat(".swf")"
#elseif ($artifact.getScope().equals("external"))
					linkType="2"
#else
					linkType="1"
#end				
					path="$dependency.getFile().getPath().replaceAll('\\', '/')"	
#if ($dependency.getSourceAttachment())
                    sourcepath="$dependency.getSourceAttachment().getPath().replaceAll('\\', '/')"
#end
                    useDefaultLinkType="false"
                    />
#end
#end

#if ($pureActionscriptProject == false)
## workaround to get player global
	      <libraryPathEntry kind="4" path="">
	        <excludedEntries>
	          <libraryPathEntry kind="1" linkType="1" path="${PROJECT_FRAMEWORKS}/locale/{locale}"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/flex.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/qtp.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/rpc.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="4" path="${PROJECT_FRAMEWORKS}/libs/framework.swc" useDefaultLinkType="true">
	            <crossDomainRsls>
	              <crossDomainRslEntry autoExtract="true" policyFileUrl="" rslUrl="framework_3.1.0.2710.swz"/>
	              <crossDomainRslEntry autoExtract="true" policyFileUrl="" rslUrl="framework_3.1.0.2710.swf"/>
	            </crossDomainRsls>
	          </libraryPathEntry>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/datavisualization.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_dmv.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_flashflexkit.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/utilities.swc" useDefaultLinkType="false"/>
	          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_agent.swc" useDefaultLinkType="false"/>
	        </excludedEntries>
	      </libraryPathEntry>
#else
## only used by pure ActionScript projects
      <libraryPathEntry kind="4" path="">
        <excludedEntries>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_charts.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="1" linkType="1" path="${PROJECT_FRAMEWORKS}/locale/{locale}"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/qtp.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/charts.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/rpc.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/datavisualization.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/framework.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_dmv.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_flashflexkit.swc" useDefaultLinkType="false"/>
          <libraryPathEntry kind="3" linkType="1" path="${PROJECT_FRAMEWORKS}/libs/automation_agent.swc" useDefaultLinkType="false"/>
        </excludedEntries>
      </libraryPathEntry>
#end

        </libraryPath>

        <sourceAttachmentPath/>

    </compiler>

    <applications>
#foreach ($application in $applications)
        <application 
                path="$application"
                />
#end
    </applications>

    <modules>
#foreach($module in $moduleFiles)
		<module application="$mainSources/$mainApplication" 
			destPath="$module.replace('mxml', 'swf')" 
			optimize="true" 
			sourcePath="$mainSources/$module"/>
#end
    </modules>

    <buildCSSFiles>
#foreach( $cssfile in $cssfiles )
        <buildCSSFileEntry destPath="bin-debug" sourcePath="$cssfile"/>
#end
    </buildCSSFiles>

</actionScriptProperties>
