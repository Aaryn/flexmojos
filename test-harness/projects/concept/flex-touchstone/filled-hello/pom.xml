<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>info.flex-mojos.flex-touchstone</groupId>
	<artifactId>filled-hello-world</artifactId>
	<version>1.0-SNAPSHOT</version>

	<packaging>swf</packaging>

	<build>
		<sourceDirectory>src/main/flex</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>info.flex-mojos</groupId>
				<artifactId>flex-maven-plugin</artifactId>
				<version>3.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<configuration>
					<sourcePaths>
						<sourcePath>${project.build.sourceDirectory}</sourcePath>
					</sourcePaths>
					<locales>
						<locale>en_US</locale>
					</locales>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>flex-mojos-repository</id>
			<url>http://svn.sonatype.org/flexmojos/repository/</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>flex-mojos-repository</id>
			<url>http://svn.sonatype.org/flexmojos/repository/</url>
		</pluginRepository>
	</pluginRepositories>

	<dependencies>
	    <dependency>
	<!-- can't point to playerglobal at local repo, must point to a file called playerglobal.swc -->
	      <groupId>com.adobe.flex.framework</groupId>
	      <artifactId>playerglobal</artifactId>
	      <version>9-3.2.0.3958</version>
	      <type>swc</type>
	      <scope>external</scope> 
	    </dependency>
	    <dependency>
	      <groupId>com.adobe.flex.framework</groupId>
	      <artifactId>framework</artifactId>
	      <version>3.2.0.3958</version>
	      <type>swc</type>
	    </dependency>
	    <dependency> <!-- useless, just a beacon to en_US -->
	      <groupId>com.adobe.flex.framework</groupId>
	      <artifactId>framework</artifactId>
	      <version>3.2.0.3958</version>
	      <type>rb.swc</type>
	    </dependency>
	    <dependency> 
	      <groupId>com.adobe.flex.framework</groupId>
	      <artifactId>framework</artifactId>
	      <version>3.2.0.3958</version>
	      <type>rb.swc</type>
	      <classifier>en_US</classifier>
	    </dependency>
	</dependencies>
</project>