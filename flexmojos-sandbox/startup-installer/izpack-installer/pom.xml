<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.sonatype.flexmojos</groupId>
		<artifactId>flexmojos-installer</artifactId>
		<version>2.0M11-SNAPSHOT</version>
	</parent>

	<artifactId>flexmojos-installer-izpack</artifactId>

	<packaging>jar</packaging>

	<name>flexmojos izpack installer</name>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>izpack-install</id>
						<phase>process-classes</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${izpack.source.dir}</outputDirectory>
							<resources>
								<resource>
									<directory>src/izpack</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>izpack-resources</id>
						<phase>process-classes</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${izpack.dir}</outputDirectory>
							<resources>
								<resource>
									<directory>src/izpack</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.izpack</groupId>
				<artifactId>izpack-maven-plugin</artifactId>
				<version>1.0-alpha-4</version>
				<configuration>
					<descriptor>${izpack.source.dir}/install.xml</descriptor>
					<kind>web</kind>
					<izpackBasedir>${izpack.dir}</izpackBasedir>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>izpack</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-maven</id>
						<phase>process-classes</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${izpack.dir}</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<includeGroupIds>org.apache.maven</includeGroupIds>
							<includeArtifactIds>apache-maven</includeArtifactIds>
						</configuration>
					</execution>
					<execution>
						<id>copy-fdk</id>
						<phase>process-classes</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${izpack.dir}/flex-sdk</outputDirectory>
							<excludeTransitive>true</excludeTransitive>
							<includeGroupIds>com.adobe.flex</includeGroupIds>
							<includeArtifactIds>flex-sdk</includeArtifactIds>
						</configuration>
					</execution>
					<execution>
						<id>create-repository</id>
						<phase>process-classes</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${izpack.dir}/repo</outputDirectory>
							<excludeGroupIds>org.codehaus.izpack</excludeGroupIds>
							<excludeTypes>zip</excludeTypes>
							<useRepositoryLayout>true</useRepositoryLayout>
						</configuration>
					</execution>
					<execution>
						<id>copy-panel</id>
						<phase>process-classes</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.sonatype.flexmojos</groupId>
									<artifactId>flexmojos-installer-destination-panel</artifactId>
									<version>${project.version}</version>
									<type>jar</type>
									<destFileName>DestinationPanel.jar</destFileName>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${izpack.dir}/bin/panels</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.codehaus.izpack</groupId>
			<artifactId>izpack-standalone-compiler</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>apache-maven</artifactId>
			<version>${maven.version}</version>
			<type>zip</type>
			<classifier>bin</classifier>
		</dependency>

		<dependency>
			<groupId>com.adobe.flex</groupId>
			<artifactId>flex-sdk</artifactId>
			<version>${flex.sdk.version}</version>
			<type>zip</type>
			<classifier>bundle</classifier>
		</dependency>

		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>asdoc-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flex-compiler-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>encrypter-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>generator-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>html-wrapper-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>install-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>optimizer-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>source-mojo</artifactId>
			<version>${flexmojos.version}</version>
			<type>maven-plugin</type>
		</dependency>
		<!--
			<dependency> <groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-parent</artifactId>
			<version>${flexmojos.version}</version> <type>pom</type>
			</dependency>
		-->
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-flex-super-pom</artifactId>
			<version>${flexmojos.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-air-super-pom</artifactId>
			<version>${flexmojos.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-unittest-support</artifactId>
			<version>${flexmojos.version}</version>
			<type>swc</type>
		</dependency>

		<dependency>
			<groupId>org.sonatype.flexmojos</groupId>
			<artifactId>flexmojos-installer-destination-panel</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies></project>

